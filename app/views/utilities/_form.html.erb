<%= form_for @utility  do |f| %>
    <div class="form-group">
        <%= f.label :company %>
        <%= f.text_field :company %>
    </div>
    <div class="form-group">
        <%= f.label :amount %>
        <%= f.number_field :amount, step: 1, value:  0 %>
    </div>

    <div class="form-group" >
        <%= f.label :date_issued %>
        <%= f.date_field :date_issued %>
    </div>

    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>