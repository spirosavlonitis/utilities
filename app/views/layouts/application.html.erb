        <li class="<%=  request.env['PATH_INFO'] == '/' ? "nav-item active" : "nav-item" %>">
          <%= link_to 'Home', "/", class: "nav-link" %>
        </li>        
      </ul>
    </nav>

    <%= yield %>
  </body>
