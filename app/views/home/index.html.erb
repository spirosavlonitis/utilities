<% if notice %>
  <div class="alert alert-primary alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<div class="container" >
  <div class="row" >
    <div class="col-sm-12" >
      <h1 style="text-align: center;" >Utilities</h1>
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="chart_2019-tab" data-toggle="tab" href="#chart_2019" role="tab" aria-controls="chart_2019"
            aria-selected="true">2019</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="chart_2020-tab" data-toggle="tab" href="#chart_2020" role="tab" aria-controls="chart_2020"
            aria-selected="false">2020</a>
        </li>
               
      </ul>

      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="chart_2019" role="tabpanel" aria-labelledby="chart_2019-tab">
          <%= render("utilities_2019") %>
          <!-- HTML -->
          <div id="chartdiv_2019" class="chartdiv"></div>
          <p>
            <% @fields[2019].each do |company, amount|%>
              <b><%= company %>: <%= amount %></b>
            <% end %>
          </p>
          <h1>Total: <%= @total[2019] %></h1>
        </div>
        <div class="tab-pane fade" id="chart_2020" role="tabpanel" aria-labelledby="chart_2020-tab">
            <h1>foo</h1>
        </div>
    
      </div>
      
    </div>
  </div>
</div>
